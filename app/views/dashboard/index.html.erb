<div class="dashboard-container">
  <aside class="sidebar">
    <!-- Logo and Brand Name -->
    <div class="logo">
      <img src="<%= asset_path 'logo.png' %>" alt="not found">
      <p>Tenko</p>
    </div>

    <!-- First Menu -->
    <ul>
      <li>
        <a href="#"><i class='bx bx-bar-chart-alt-2'></i> Analytics</a>
      </li>
      <li>
        <a href="#"><i class='bx bxs-cart-alt'></i> E-Commerce</a>
      </li>
      <li>
        <a href="#"><i class='bx bx-data'></i> Cryptocurrency</a>
      </li>
      <li>
        <a href="#"><i class='bx bx-briefcase-alt-2'></i> Projects</a>
      </li>
    </ul>

    <!-- Separator/Divider -->
    <div class="sidebar-divider"></div>

    <!-- Pages Section with Plus Icon -->
    <div class="pages-header">
      <h1>Pages</h1>
      <i class='bx bx-plus'></i>
    </div>

    <!-- Second Menu -->
    <ul>
      <li>
        <a href="#"><i class='bx bxs-calendar'></i> Calendar</a>
      </li>
      <li>
        <a href="#"><i class='bx bx-folder-open'></i> Projects</a>
      </li>
      <li>
        <a href="#"><i class='bx bx-user'></i> Members</a>
      </li>
      <li>
        <a href="#"><i class='bx bx-wallet'></i> File Manager</a>
      </li>
      <li>
       <%= link_to "<i class='bx bx-task'></i> Task".html_safe, tasks_path, data: { turbo_frame: "tasks_frame" } %>
      </li>

      <li>
        <a href="#"><i class='bx bx-book'></i> Invoices</a>
      </li>
      <li>
        <a href="#"><i class='bx bx-news'></i> Articles</a>
      </li>
      <li>
        <a href="#"><i class='bx bx-support'></i> Support Ticket</a>
      </li>
    </ul>

    <!-- Footer (Optional) -->
    <footer>
      <p>Copyright 2024</p>
    </footer>
  </aside>

  <header class="header">
    <div class="search">
      <i class='bx bx-search-alt-2'></i>
      <input type="text" placeholder="Search" />
    </div>
    <div class="icons">
      <li><i class='bx bxs-bell'></i></li>
      <li><i class='bx bx-moon'></i></li>
      <li><i class='bx bx-cog'></i></li>
    </div>
    <div class="profile">
      <img src="<%= asset_path 'profile.png' %>" alt="Profile Image">
      <p>Belam Muia</p>
    </div>
  </header>

  <main>
    <%= turbo_frame_tag "tasks_frame" do %>
      <h1>Welcome to the Dashboard</h1>
    <% end %>
  </main>
</div>
