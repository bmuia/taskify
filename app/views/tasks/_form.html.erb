<%= form_with model: @task, local: true do |form| %>
  <div class="form-group">
    <%= form.label :title %>
    <%= form.text_field :title, class: "form-control", required: true %>
  </div>
  <div class="form-group">
    <%= form.label :description %>
    <%= form.text_area :description, class: "form-control", required: true %>
  </div>
  <div class="form-group">
    <%= form.label :start_date %>
    <%= form.date_field :start_date, class: "form-control", required: true %>
  </div>
  <div class="form-group">
    <%= form.label :end_date %>
    <%= form.date_field :end_date, class: "form-control", required: true %>
  </div>

  <%= form.submit @task.new_record? ? "Create Task" : "Update Task", class: "submit-button" %> 
<% end %>
