<turbo-frame id="tasks_frame"> 
    <div class="show-task-container">
        <div class="task-details-card">
         <div class="back-1">
         <%= link_to "<i class='bx bxs-right-arrow-square'></i> Back".html_safe, tasks_path, class: "back-button" %>
         </div>
            <h1 class="task-title"><%= @task.title %></h1>
            
            <div class="task-detail">
                <h4>Start Date</h4>
                <p><%= @task.start_date %></p>
            </div>

            <div class="task-detail">
                <h4>End Date</h4>
                <p><%= @task.end_date %></p>
            </div>

            <div class="task-detail">
                <h4>Status</h4>
                <p><%= @task.status %></p>
            </div>

            <div class="task-detail">
                <h4>Description</h4>
                <p><%= @task.description %></p>
            </div>
            
            <div class="task-actions">
                <%= link_to 'Edit', edit_task_path(@task), class: "edit-button" %>
                <%= link_to 'Delete', task_path(@task), method: :delete, data: { confirm: "Are you sure?" }, class: "delete-button" %>
            </div>
        </div>
    </div>
</turbo-frame>
